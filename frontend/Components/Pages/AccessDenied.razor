@page "/access-denied"
@inject NavigationManager Navigation

<PageTitle>Access Denied - SIMS</PageTitle>

<div class="dashboard-wrapper">

    <div class="content-card access-denied-card">
        <div class="icon">
            <i class="bi bi-x-octagon-fill"></i>
        </div>

        <h1>Access Denied</h1>

        <p>You don't have permission to access this resource.</p>
        <p class="subtitle">
            Please contact your administrator if you believe this is an error.
        </p>

        <div class="actions">
            <button class="action-btn primary" @onclick="GoBack">
                <i class="bi bi-arrow-left"></i> Go Back
            </button>

            <button class="action-btn success" @onclick="GoHome">
                <i class="bi bi-house"></i> Go to Dashboard
            </button>
        </div>
    </div>

</div>

@code {
    private void GoBack() => Navigation.NavigateTo("/", forceLoad: true);
    private void GoHome() => Navigation.NavigateTo("/dashboard");
}