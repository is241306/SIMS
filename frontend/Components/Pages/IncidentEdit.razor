@page "/incidents/{Id:int}/edit"
@inject HttpClient Http
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Edit Incident #@Id - SIMS</PageTitle>

<div class="dashboard-wrapper incident-edit-wrapper">
    @if (loading)
    {
        <div class="content-card state-card loading-card">
            <div class="state-icon">
                <i class="bi bi-hourglass-split"></i>
            </div>
            <p>Loading incident...</p>
        </div>
    }
    else if (incident == null)
    {
        <div class="content-card state-card error-card">
            <div class="state-icon error">
                <i class="bi bi-x-octagon-fill"></i>
            </div>
            <h2>Incident Not Found</h2>
            <button class="btn-primary" @onclick="GoBack">
                <i class="bi bi-arrow-left"></i>
                Go Back
            </button>
        </div>
    }
    else
    {
        <div class="page-header">
            <h1>
                <i class="bi bi-pencil-square"></i>
                <span>Edit Incident #@Id</span>
            </h1>

            <button class="btn-back" @onclick="GoBack">
                <i class="bi bi-arrow-left"></i>
                Back
            </button>
        </div>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-error">
                <i class="bi bi-exclamation-triangle-fill"></i> @errorMessage
            </div>
        }

        @if (!string.IsNullOrEmpty(successMessage))
        {
            <div class="alert alert-success">
                <i class="bi bi-check-circle-fill"></i> @successMessage
            </div>
        }

        <div class="content-card incident-edit-card">
            <form @onsubmit="SaveIncident">
                <div class="form-grid">
                    <div class="form-group">
                        <label for="description">Description *</label>
                        <textarea id="description"
                                  @bind="incident.Description"
                                  rows="4"
                                  class="form-input"
                                  required></textarea>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="severity">Severity *</label>
                            <select id="severity" @bind="incident.Severity" class="form-input" required>
                                <option value="Low">Low</option>
                                <option value="Medium">Medium</option>
                                <option value="High">High</option>
                                <option value="Critical">Critical</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="status">Status *</label>
                            <select id="status" @bind="incident.Status" class="form-input" required>
                                <option value="New">New</option>
                                <option value="Open">Open</option>
                                <option value="InProgress">Investigating</option>
                                <option value="Resolved">Resolved</option>
                                <option value="Escalated">Escalated</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="assignedUser">Assign To</label>
                        <select id="assignedUser" @bind="incident.AssignedId" class="form-input">
                            <option value="">Unassigned</option>
                            @foreach (var user in users)
                            {
                                <option value="@user.Id">@user.Name</option>
                            }
                        </select>
                    </div>

                    <div class="info-section">
                        <div class="info-item">
                            <span class="info-label">Created:</span>
                            <span class="info-value">
                                @incident.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                            </span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Last Updated:</span>
                            <span class="info-value">
                                @incident.UpdatedAt.ToString("dd.MM.yyyy HH:mm")
                            </span>
                        </div>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn-save" disabled="@isSaving">
                        @if (isSaving)
                        {
                            <span><i class="bi bi-hourglass-split"></i> Saving...</span>
                        }
                        else
                        {
                            <span><i class="bi bi-save"></i> Save Changes</span>
                        }
                    </button>

                    <button type="button" class="btn-cancel" @onclick="GoBack">
                        Cancel
                    </button>

                    <button type="button" class="btn-view" @onclick="ViewDetails">
                        <i class="bi bi-eye-fill"></i>
                        View Details
                    </button>
                </div>
            </form>
        </div>
    }
</div>

@code {
    [Parameter] public int Id { get; set; }

    private EditIncidentDto? incident;
    private List<UserDto> users = new();
    private bool loading = true;
    private bool isSaving = false;
    private string? errorMessage;
    private string? successMessage;

    protected override async Task OnInitializedAsync() {
        await LoadData();
    }

    private async Task LoadData() {
        loading = true;
        try{
            incident = await Http.GetFromJsonAsync<EditIncidentDto>($"api/incidents/{Id}");
            users = await Http.GetFromJsonAsync<List<UserDto>>("api/users") ?? new();
        }
        catch (Exception ex){
            errorMessage = $"Error loading incident: {ex.Message}";
            users = new List<UserDto> {
                new() { Id = 1, Name = "John Doe" },
                new() { Id = 2, Name = "Jane Smith" }
            };
        }
        finally{
            loading = false;
        }
    }

    private async Task SaveIncident() {
        if (incident == null) return;

        isSaving = true;
        errorMessage = null;
        successMessage = null;

        try{
            var response = await Http.PutAsJsonAsync($"api/incidents/{Id}", incident);

            if (response.IsSuccessStatusCode){
                successMessage = "Incident updated successfully!";
                await Task.Delay(1000);
                Navigation.NavigateTo($"/incidents/{Id}");
            }
            else{
                errorMessage = $"Failed to update incident: {response.StatusCode}";
            }
        }
        catch (Exception ex){
            errorMessage = $"Error saving incident: {ex.Message}";
        }
        finally{
            isSaving = false;
        }
    }

    private void ViewDetails() {
        Navigation.NavigateTo($"/incidents/{Id}");
    }

    private void GoBack() {
        Navigation.NavigateTo("/incidents");
    }

    public class EditIncidentDto {
        public string Description { get; set; } = "";
        public string Severity { get; set; } = "";
        public string Status { get; set; } = "";
        public int? AssignedId { get; set; }
        public DateTime CreatedAt { get; set; }
        public DateTime UpdatedAt { get; set; }
    }

    public class UserDto {
        public int Id { get; set; }
        public string Name { get; set; } = "";
    }

}
