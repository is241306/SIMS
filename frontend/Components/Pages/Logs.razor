@page "/logs"
@inject HttpClient Http
@rendermode InteractiveServer

<PageTitle>Logs - SIMS</PageTitle>

<div class="dashboard-wrapper logs-wrapper">
    <div class="page-header">
        <h1>
            <i class="bi bi-journal-text"></i>
            <span>System Logs</span>
        </h1>

        <button class="action-btn primary btn-refresh" @onclick="LoadLogs">
            <i class="bi bi-arrow-repeat"></i>
            Refresh
        </button>
    </div>

    <!-- Filters -->
    <div class="content-card filters-card">
        <div class="filters-inner">
            <div class="filter-group">
                <label>Log Level</label>
                <select @bind="filterLevel" @bind:event="onchange" class="filter-select">
                    <option value="">All</option>
                    <option value="Info">Info</option>
                    <option value="Warning">Warning</option>
                    <option value="Error">Error</option>
                </select>
            </div>

            <div class="filter-group">
                <label>Time Range</label>
                <select @bind="filterTimeRange" @bind:event="onchange" class="filter-select">
                    <option value="1">Last Hour</option>
                    <option value="24">Last 24 Hours</option>
                    <option value="168">Last Week</option>
                    <option value="720">Last Month</option>
                </select>
            </div>

            <div class="filters-actions">
                <button class="action-btn" @onclick="ResetFilters">
                    <i class="bi bi-arrow-counterclockwise"></i> Reset
                </button>
            </div>
        </div>
    </div>

    <!-- Logs Table -->
    <div class="content-card">
        <div class="card-header">
            <h2>Logs</h2>
            <span class="badge-soft">
                @(filteredLogs?.Count ?? 0) log(s)
            </span>
        </div>

        <div class="table-container">
            <table class="data-table logs-table">
                <thead>
                <tr>
                    <th>Timestamp</th>
                    <th>Level</th>
                    <th>Message</th>
                    <th>Source</th>
                </tr>
                </thead>

                <tbody>
                @if (filteredLogs == null)
                {
                    <tr>
                        <td colspan="4" class="loading">Loading logs...</td>
                    </tr>
                }
                else if (!filteredLogs.Any())
                {
                    <tr>
                        <td colspan="4" class="no-data">No logs found</td>
                    </tr>
                }
                else
                {
                    @foreach (var log in filteredLogs)
                    {
                        <tr class="table-row">
                            <td class="log-time">@log.Timestamp.ToString("dd.MM.yyyy HH:mm:ss")</td>
                            <td>
                                <span class="log-level level-@log.Level.ToLower()">
                                    @log.Level
                                </span>
                            </td>
                            <td class="log-message">@log.Message</td>
                            <td class="log-source">@log.Source</td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

@code {
    private List<LogDto>? logs;
    private List<LogDto>? filteredLogs;

    private string _filterLevel = "";
    private string filterLevel {
        get => _filterLevel;
        set {
            _filterLevel = value;
            ApplyFilters();
        }
    }

    private string _filterTimeRange = "24";
    private string filterTimeRange {
        get => _filterTimeRange;
        set {
            _filterTimeRange = value;
            ApplyFilters();
        }
    }

    protected override async Task OnInitializedAsync() {
        await LoadLogs();
    }

    private async Task LoadLogs() {
        try{
            var redisLogs =
                await Http.GetFromJsonAsync<List<Dictionary<string, object>>>("api/logs/latest?count=100");

            logs = redisLogs?.Select(log => new LogDto {
                Timestamp = log.TryGetValue("Timestamp", out var t) && t != null
                    ? DateTime.Parse(t.ToString()!)
                    : DateTime.Now,
                Level = log.TryGetValue("Level", out var lvl) && lvl != null
                    ? lvl.ToString()!
                    : "Info",
                Message = log.TryGetValue("Message", out var msg) && msg != null
                    ? msg.ToString()!
                    : "No message",
                Source = log.TryGetValue("Source", out var src) && src != null
                    ? src.ToString()!
                    : "Unknown"
            }).ToList();

            filteredLogs = logs;
            ApplyFilters();
        }
        catch (Exception ex){
            logs = new List<LogDto> {
                new() {
                    Timestamp = DateTime.Now,
                    Level = "Error",
                    Message = $"Failed to load logs: {ex.Message}",
                    Source = "LogsPage"
                }
            };
            filteredLogs = logs;
        }
    }

    private void ApplyFilters() {
        var hours = int.Parse(filterTimeRange);
        var cutoff = DateTime.Now.AddHours(-hours);

        filteredLogs = logs?
            .Where(l =>
                (string.IsNullOrEmpty(filterLevel) || l.Level == filterLevel) &&
                l.Timestamp >= cutoff)
            .OrderByDescending(l => l.Timestamp)
            .ToList();
    }

    private void ResetFilters() {
        filterLevel = "";
        filterTimeRange = "24";
        ApplyFilters();
    }

    public class LogDto {
        public DateTime Timestamp { get; set; }
        public string Level { get; set; } = "Info";
        public string Message { get; set; } = "";
        public string Source { get; set; } = "";
    }
}
