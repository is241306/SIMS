        color: #6B7280;
    }
</style>

@code {
    private List<UserDto>? users;

    protected override async Task OnInitializedAsync()
    {
        await LoadUsers();
    }

    private async Task LoadUsers()
    {
        try
        {
            users = await Http.GetFromJsonAsync<List<UserDto>>("api/users");
        }
        catch
        {
            users = new List<UserDto>
            {
                new() { Id = 1, Username = "admin", Email = "admin@sims.com", Role = "Admin", IsActive = true, CreatedAt = DateTime.Now.AddMonths(-6) },
                new() { Id = 2, Username = "john.doe", Email = "john@sims.com", Role = "Analyst", IsActive = true, CreatedAt = DateTime.Now.AddMonths(-3) },
                new() { Id = 3, Username = "jane.smith", Email = "jane@sims.com", Role = "User", IsActive = true, CreatedAt = DateTime.Now.AddMonths(-2) },
                new() { Id = 4, Username = "bob.johnson", Email = "bob@sims.com", Role = "User", IsActive = false, CreatedAt = DateTime.Now.AddMonths(-4) }
            };
        }
    }

    private async Task ChangeRole(int userId, string newRole)
    {
        try
        {
            await Http.PutAsync($"api/users/{userId}/role?role={newRole}", null);
            await LoadUsers();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
    }

    private async Task DeactivateUser(int userId)
    {
        try
        {
            await Http.PutAsync($"api/users/{userId}/deactivate", null);
            await LoadUsers();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
    }

    private async Task ActivateUser(int userId)
    {
        try
        {
            await Http.PutAsync($"api/users/{userId}/activate", null);
            await LoadUsers();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
    }

    private void EditUser(int userId)
    {
        Navigation.NavigateTo($"/users/{userId}/edit");
    }

    private void CreateUser()
    {
        Navigation.NavigateTo("/users/create");
    }

    public class UserDto
    {
        public int Id { get; set; }
        public string Username { get; set; } = "";
        public string Email { get; set; } = "";
        public string Role { get; set; } = "User";
        public bool IsActive { get; set; } = true;
        public DateTime CreatedAt { get; set; }
    }
}
