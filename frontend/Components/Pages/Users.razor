@page "/users"
@inject HttpClient Http
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Users & Roles - SIMS</PageTitle>

<div class="page-wrapper">
    <div class="page-header">
        <h1>üë• Users & Roles Management</h1>
        <button class="btn-create" @onclick="CreateUser">+ New User</button>
    </div>

    <!-- Users Table -->
    <div class="content-card">
        <table class="data-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Status</th>
                    <th>Created</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (users == null)
                {
                    <tr><td colspan="7" class="loading">Loading...</td></tr>
                }
                else if (!users.Any())
                {
                    <tr><td colspan="7" class="no-data">No users found</td></tr>
                }
                else
                {
                    @foreach (var user in users)
                    {
                        <tr class="table-row @(user.IsActive ? "" : "inactive")">
                            <td class="user-id">@user.Id</td>
                            <td>
                                <div class="user-info">
                                    <span class="user-avatar">@user.Username[0]</span>
                                    <span>@user.Username</span>
                                </div>
                            </td>
                            <td>@user.Email</td>
                            <td>
                                <select class="role-select" 
                                        value="@user.Role" 
                                        @onchange="@(async (e) => await ChangeRole(user.Id, e.Value?.ToString() ?? string.Empty))"
                                        disabled="@(!user.IsActive)">
                                    <option value="User">User</option>
                                    <option value="Analyst">Analyst</option>
                                    <option value="Admin">Admin</option>
                                </select>
                            </td>
                            <td>
                                <span class="status-badge @(user.IsActive ? "active" : "inactive")">
                                    @(user.IsActive ? "Active" : "Inactive")
                                </span>
                            </td>
                            <td>@user.CreatedAt.ToString("dd.MM.yyyy")</td>
                            <td>
                                <div class="action-buttons">
                                    <button class="btn-action btn-edit" 
                                            @onclick="() => EditUser(user.Id)" 
                                            title="Edit User">
                                        ‚úèÔ∏è
                                    </button>
                                    @if (user.IsActive)
                                    {
                                        <button class="btn-action btn-deactivate" 
                                                @onclick="() => DeactivateUser(user.Id)" 
                                                title="Deactivate">
                                            üö´
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn-action btn-activate" 
                                                @onclick="() => ActivateUser(user.Id)" 
                                                title="Activate">
                                            ‚úÖ
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <!-- Role Statistics -->
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon">üë§</div>
            <div class="stat-content">
                <div class="stat-number">@users?.Count(u => u.Role == "User")</div>
                <div class="stat-label">Users</div>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">üîç</div>
            <div class="stat-content">
                <div class="stat-number">@users?.Count(u => u.Role == "Analyst")</div>
                <div class="stat-label">Analysts</div>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">‚öôÔ∏è</div>
            <div class="stat-content">
                <div class="stat-number">@users?.Count(u => u.Role == "Admin")</div>
                <div class="stat-label">Admins</div>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">‚úÖ</div>
            <div class="stat-content">
                <div class="stat-number">@users?.Count(u => u.IsActive)</div>
                <div class="stat-label">Active</div>
            </div>
        </div>
    </div>
</div>

