@page "/users"
@inject HttpClient Http
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Users & Roles - SIMS</PageTitle>

<div class="dashboard-wrapper users-wrapper">

    <!-- HEADER -->
    <div class="page-header">
        <h1>
            <i class="bi bi-people-fill"></i>
            <span>Users & Roles Management</span>
        </h1>

        <button class="action-btn success" @onclick="CreateUser">
            <i class="bi bi-person-plus-fill"></i>
            New User
        </button>
    </div>

    <!-- TABLE -->
    <div class="content-card">
        <div class="card-header">
            <h2>Users</h2>
            <span class="badge-soft">@users?.Count() user(s)</span>
        </div>

        <div class="table-container">
            <table class="data-table users-table">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Status</th>
                    <th>Created</th>
                    <th class="text-right">Actions</th>
                </tr>
                </thead>

                <tbody>
                @if (users == null)
                {
                    <tr>
                        <td colspan="7" class="loading">Loading...</td>
                    </tr>
                }
                else if (!users.Any())
                {
                    <tr>
                        <td colspan="7" class="no-data">No users found</td>
                    </tr>
                }
                else
                {
                    @foreach (var user in users)
                    {
                        <tr class="table-row @(user.IsActive ? "" : "inactive")">

                            <td class="user-id">USR@user.Id</td>

                            <td>
                                <div class="user-info">
                                    <span class="user-avatar">@user.Username[0]</span>
                                    <span>@user.Username</span>
                                </div>
                            </td>

                            <td>@user.Email</td>

                            <td>
                                <select class="role-select"
                                        value="@user.Role"
                                        @onchange="@(async e => await ChangeRole(user.Id, e.Value?.ToString() ?? ""))"
                                        disabled="@(!user.IsActive)">
                                    <option value="User">User</option>
                                    <option value="Analyst">Analyst</option>
                                    <option value="Admin">Admin</option>
                                </select>
                            </td>

                            <td>
                                <span class="status-badge @(user.IsActive ? "active" : "inactive")">
                                    @(user.IsActive ? "Active" : "Inactive")
                                </span>
                            </td>

                            <td>@user.CreatedAt.ToString("dd.MM.yyyy")</td>

                            <td class="actions-cell">
                                <div class="action-buttons">
                                    <button class="btn-action"
                                            @onclick="() => EditUser(user.Id)"
                                            title="Edit User">
                                        <i class="bi bi-pencil-square"></i>
                                    </button>

                                    @if (user.IsActive)
                                    {
                                        <button class="btn-action danger"
                                                @onclick="() => DeactivateUser(user.Id)"
                                                title="Deactivate">
                                            <i class="bi bi-person-dash-fill"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn-action success"
                                                @onclick="() => ActivateUser(user.Id)"
                                                title="Activate">
                                            <i class="bi bi-person-check-fill"></i>
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    </div>


    <!-- ROLE STATISTICS -->
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon"><i class="bi bi-person-fill"></i></div>
            <div class="stat-content">
                <div class="stat-number">@users?.Count(u => u.Role == "User")</div>
                <div class="stat-label">Users</div>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon"><i class="bi bi-search"></i></div>
            <div class="stat-content">
                <div class="stat-number">@users?.Count(u => u.Role == "Analyst")</div>
                <div class="stat-label">Analysts</div>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon"><i class="bi bi-gear-fill"></i></div>
            <div class="stat-content">
                <div class="stat-number">@users?.Count(u => u.Role == "Admin")</div>
                <div class="stat-label">Admins</div>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon success"><i class="bi bi-check-circle-fill"></i></div>
            <div class="stat-content">
                <div class="stat-number">@users?.Count(u => u.IsActive)</div>
                <div class="stat-label">Active</div>
            </div>
        </div>
    </div>

</div>

@code {

    private List<UserDto>? users;

    protected override async Task OnInitializedAsync()
    {
        await LoadUsers();
    }

    private async Task LoadUsers()
    {
        try
        {
            users = await Http.GetFromJsonAsync<List<UserDto>>("api/users");
        }
        catch
        {
            users = new List<UserDto>
            {
                new() { Id = 1, Username="admin", Email="admin@sims.com", Role="Admin", IsActive=true, CreatedAt=DateTime.Now.AddMonths(-6)},
                new() { Id = 2, Username="john.doe", Email="john@sims.com", Role="Analyst", IsActive=true, CreatedAt=DateTime.Now.AddMonths(-3)},
                new() { Id = 3, Username="jane.smith", Email="jane@sims.com", Role="User", IsActive=true, CreatedAt=DateTime.Now.AddMonths(-2)},
                new() { Id = 4, Username="bob.johnson", Email="bob@sims.com", Role="User", IsActive=false, CreatedAt=DateTime.Now.AddMonths(-4)}
            };
        }
    }

    private async Task ChangeRole(int userId, string newRole)
    {
        await Http.PutAsync($"api/users/{userId}/role?role={newRole}", null);
        await LoadUsers();
    }

    private async Task DeactivateUser(int userId)
    {
        await Http.PutAsync($"api/users/{userId}/deactivate", null);
        await LoadUsers();
    }

    private async Task ActivateUser(int userId)
    {
        await Http.PutAsync($"api/users/{userId}/activate", null);
        await LoadUsers();
    }

    private void EditUser(int userId)
    {
        Navigation.NavigateTo($"/users/{userId}/edit");
    }

    private void CreateUser()
    {
        Navigation.NavigateTo("/users/create");
    }

    public class UserDto
    {
        public int Id { get; set; }
        public string Username { get; set; } = "";
        public string Email { get; set; } = "";
        public string Role { get; set; } = "User";
        public bool IsActive { get; set; }
        public DateTime CreatedAt { get; set; }
    }
}
